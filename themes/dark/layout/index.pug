
.content.content-intro
	.content-inner
		if theme.intro.background
			canvas#background
		.wrap.fade
			h2.content-title #{theme.intro.title}
			h3.content-subtitle(original-content=`${theme.intro.subtitle}`) &nbsp;
			a.enter #{theme.intro.enter}
			.arrow.arrow-1
			.arrow.arrow-2
	.shape-wrap
		svg.shape(width="100%" height="100vh" preserveAspectRatio="none" viewBox="0 0 1440 800" xmlns:pathdata="http://www.codrops.com/")
			path( d="M -44,-50 C -52.71,28.52 15.86,8.186 184,14.69 383.3,22.39 462.5,12.58 638,14 835.5,15.6 987,6.4 1194,13.86 1661,30.68 1652,-36.74 1582,-140.1 1512,-243.5 15.88,-589.5 -44,-50 Z" pathdata:id="M -44,-50 C -137.1,117.4 67.86,445.5 236,452 435.3,459.7 500.5,242.6 676,244 873.5,245.6 957,522.4 1154,594 1593,753.7 1793,226.3 1582,-126 1371,-478.3 219.8,-524.2 -44,-50 Z")

.content.content-main
	#card
		.card-inner.fade
			header
				img(src=`${theme.avatar}` alt="avatar")
				h1(data-translate="name") #{theme.arthor}
				h2#signature(data-translate="signature") #{theme.index.signature}

			ul.menu-list
				each item in theme.menu
					li
						a(href=`${item.href}` aria-label=`${item.text}`)
							i(class=`icon icon-${item.icon}`)
							span(data-translate=`${item.text}`) #{item.text}

			ul.links-list
				each val in theme.links
					li
						a(href=`${val.href}` target="_blank")
							i(class=`icon icon-${val.icon}`)

script(src='./js/index.js')

if theme.intro.background
script(src='./js/background.js')

